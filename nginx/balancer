
upstream loadbalancer {
    server unix:/tmp/scemo-pezzente-api/scemo-pezzente-1.sock;
    server unix:/tmp/scemo-pezzente-api/scemo-pezzente-2.sock;
}
server {
    location / {
        include uwsgi_params;
        uwsgi_ignore_client_abort on;
        proxy_read_timeout 30;
        uwsgi_connect_timeout 30;
        uwsgi_read_timeout 30;
        uwsgi_send_timeout 30;
        uwsgi_request_buffering on;
        uwsgi_pass loadbalancer;
    }
}
